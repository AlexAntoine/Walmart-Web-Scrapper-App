<%- include('../partials/header') -%>

<div class="col-9 edit-user">
    <div class="container p-3 w-50">
        <h1 class="text-center mt-5 mb-3">Update User</h1>
        <%- include('../partials/messages') -%>
        <form action="/edit/<%= user.id%>?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">

            <div class="form-group px-0">
                <input type="text" value="<%=user.username%>" name="username" class="form-control" placeholder="<%=user.username%>">
            </div>
    
            <div class="form-group px-0">
                <input type="email" value="<%=user.email%>" name="email" class="form-control" placeholder="<%=user.email%>">
            </div>
    
            <button type="submit" class="btn btn-danger btn-block">Update</button>
        </form>
    </div>
</div>

<%- include('../partials/footer') -%>